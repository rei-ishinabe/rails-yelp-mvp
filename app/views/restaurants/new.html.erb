<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'Restaurant name' %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category , :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit class:'btn btn-secondary' %>
  <%= link_to restaurants_path, class:'d-inline text-dark ml-3' do %>
    Back home
  <% end %>
<% end %>

