<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category , :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit class:'btn btn-primary' %>
  <%= link_to restaurants_path, class:'d-inline text-grey ml-3' do %>
    Back home
  <% end %>
<% end %>

