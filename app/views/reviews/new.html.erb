<h1>New review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant,@review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5).to_a %>
  <%= f.submit 'Add a review', class:'btn btn-secondary' %>
  <%= link_to 'Go back', restaurant_path(@restaurant), class:'ml-3' %>
<% end %>
